rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow ROOT user to read all user documents
      allow list: if request.auth != null && request.auth.token.email == 'thiagopascotto94@outlook.com';
    }

    match /users/{userId}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for library templates
    match /library_templates/{templateId} {
      // Allow all authenticated users to read templates
      allow read: if request.auth != null;
      // Allow only the ROOT user to create, update, and delete templates
      allow write: if request.auth != null && request.auth.token.email == 'thiagopascotto94@outlook.com';
    }

    // Rules for subscription plans
    match /plans/{planId} {
      // Allow all authenticated users to read plans
      allow read: if request.auth != null;
      // Allow only the ROOT user to create, update, and delete plans
      allow write: if request.auth != null && request.auth.token.email == 'thiagopascotto94@outlook.com';
    }

    // Allow ROOT user to perform collection group queries
    match /{path=**}/libraries/{libraryId} {
      allow read: if request.auth != null && request.auth.token.email == 'thiagopascotto94@outlook.com';
    }

    match /{path=**}/searchHistory/{searchId} {
      allow read: if request.auth != null && request.auth.token.email == 'thiagopascotto94@outlook.com';
    }
  }
}
